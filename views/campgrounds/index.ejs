<% include ../partials/header %> 

 <div class="container">
     <header class="jumbotron" style="background-image: url(Images/backgroundlogo.png)">
         <div class="container">
             <h1 style="color: white">Welcome To CampInsiders!</h1>
             <p style="color: white">View our hand-picked campgrounds from all over the world</p>
             <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-12">
                <div class="thumbnail" style="width: 100%" style="background-color: transparent">
                   <img style="height: 157.68px" src="<%= campground.image %>">
                   <div class="caption">
                       <h4 style="color: white"><%= campground.name %></h4>
                   </div>
                   <p>
                       <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>
